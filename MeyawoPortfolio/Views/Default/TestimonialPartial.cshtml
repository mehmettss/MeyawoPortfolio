@model List<MeyawoPortfolio.Models.TblTestimonial>
<section class="section" id="testmonial">
    <div class="container text-center">
        <h6 class="section-title mb-6">Referanslarım</h6>
        <div class="row">
            @foreach (var item in Model)
            {
            <div class="col-md-6">
                <div class="testimonial-card">
                    <div class="testimonial-card-img-holder">
                        <img src="/Templates/meyawo-1.0.0/assets/imgs/person-1.png" class="testimonial-card-img"
                             alt="Download free bootstrap 4 landing page, free boootstrap 4 templates, Download free bootstrap 4.1 landing page, free boootstrap 4.1.1 templates, meyawo Landing page">
                    </div>
                    <div class="testimonial-card-body">
                        <p class="testimonial-card-subtitle">
                      @item.Description
                        <h6 class="testimonial-card-title">@item.NameSurname</h6>
                    </div>
                </div>
            </div>
            }
        </div>
    </div> <!-- end of container -->
</section> <!-- end of testimonial section -->