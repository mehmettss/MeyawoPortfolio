@model List<MeyawoPortfolio.Models.TblService>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/_Layout1.cshtml";
}



<h2>Hizmet Listesi</h2>

<table class="table table-bordered">
    <tr>

        <th>Hizmet ID</th>
        <th>Hizmet</th>
        <th>Acıklama</th>
        <th>Sil</th>
        <th>Guncelle</th>
       
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ServiceID</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Service/UpdateService/@item.ServiceID" class="btn btn-success">Guncelle</a></td>
     
        </tr>
    }
</table>
<a href="/Service/CreateService/" class="btn btn-primary">Yeni Hizmet Ekleme</a>


