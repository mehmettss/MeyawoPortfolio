
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/_Layout1.cshtml";
}
@{
    string[] gunler = { "Pazar", "Pazartesi", "Salı", "Çarşamba", "Perşembe", "Cuma", "Cumartesi" };
    string bugunGunlerden = gunler[(int)DateTime.Now.DayOfWeek];
}
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Skydash Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/Templates/skydash/vendors/feather/feather.css">

    <link rel="stylesheet" href="~/Templates/skydash/vendors/ti-icons/css/themify-icons.css">

    <link rel="stylesheet" href="~/Templates/skydash/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <link rel="stylesheet" href="~/Templates/skydash/vendors/datatables.net-bs4/dataTables.bootstrap4.css">
    <link rel="stylesheet" href="~/Templates/skydash/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" type="~/Templates/skydash/text/css" href="js/select.dataTables.min.css">
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/Templates/skydash/css/vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/Templates/skydash/images/favicon.png" />
</head>


<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="row">
            <div class="col-12 col-xl-8 mb-4 mb-xl-0">
                <h3 class="font-weight-bold">Hos Geldin.</h3>
                <h6 class="font-weight-normal mb-0">My Portfolio Admin Paneli </h6>
            </div>
            <div class="col-12 col-xl-4">
                <div class="justify-content-end d-flex">
                    <div class="dropdown flex-md-grow-1 flex-xl-grow-0">
                        <button class="btn btn-sm btn-light bg-white dropdown-toggle" type="button" id="dropdownMenuDate2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                            <i class="mdi mdi-calendar"></i> Today (10 Jan 2021)
                        </button>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuDate2">
                            <a class="dropdown-item" href="#">January - March</a>
                            <a class="dropdown-item" href="#">March - June</a>
                            <a class="dropdown-item" href="#">June - August</a>
                            <a class="dropdown-item" href="#">August - November</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card tale-bg">
            <div class="card-people mt-lg-n5">
                <img src="~/Templates/skydash/images/dashboard/mevsim.jpg" alt="">
                <div class="weather-info">
                    <div class="d-flex">
                        <div>
                            <h2 class="mb-0 font-weight-normal"><i class="icon-sun mr-2"></i>@ViewBag.v5<sup>C</sup></h2>
                        </div>
                        <div class="ml-2">
                            <h4 class="location font-weight-normal">İstanbul</h4>
                            <h6 class="font-weight-normal">Turkiye</h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 grid-margin transparent">
        <div class="row">
            <div class="col-md-6 mb-4 stretch-card transparent">
                <div class="card card-tale">
                    <div class="card-body">
                        <p class="mb-4">Mesaj Sayısı</p>
                        <p class="fs-30 mb-2">@ViewBag.v2</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-4 stretch-card transparent">
                <div class="card card-dark-blue">
                    <div class="card-body">
                        <p class="mb-4">Proje Sayısı</p>
                        <p class="fs-30 mb-2"> @ViewBag.v3</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 mb-4 mb-lg-0 stretch-card transparent">
                <div class="card card-light-blue">
                    <div class="card-body">
                        <p class="mb-4">Sosyal Medya</p>
                        <p class="fs-30 mb-2">@ViewBag.v4</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 stretch-card transparent">
                <div class="card card-light-danger">
                    <div class="card-body">
                        <p class="mb-4">Bugün Günlerden:</p>
                        <p class="fs-30 mb-2"> @bugunGunlerden</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Proje Kategorileri</h4>
                <canvas id="doughnutChart"></canvas>
            </div>
        </div>
    </div>
    <div class="col-lg-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Proje de kulanılan teknolojiler</h4>
                <canvas id="barChart"></canvas>
            </div>
        </div>
    </div>

</div>
<script src="~/Templates/skydash/vendors/js/vendor.bundle.base.js"></script>
<!-- endinject -->
<!-- Plugin js for this page -->
<script src="~/Templates/skydash/vendors/chart.js/Chart.min.js"></script>
<script src="~/Templates/skydash/vendors/datatables.net/jquery.dataTables.js"></script>
<script src="~/Templates/skydash/vendors/datatables.net-bs4/dataTables.bootstrap4.js"></script>
<script src="~/Templates/skydash/js/dataTables.select.min.js"></script>

<!-- End plugin js for this page -->
<!-- inject:js -->
<script src="~/Templates/skydash/js/off-canvas.js"></script>
<script src="~/Templates/skydash/js/hoverable-collapse.js"></script>
<script src="~/Templates/skydash/js/template.js"></script>
<script src="~/Templates/skydash/js/settings.js"></script>
<script src="~/Templates/skydash/js/todolist.js"></script>
<!-- endinject -->
<!-- Custom js for this page-->
<script src="~/Templates/skydash/js/dashboard.js"></script>
<script src="~/Templates/skydash/js/Chart.roundedBarCharts.js"></script>


<script src="~/Templates/skydash/js/chart.js"></script>